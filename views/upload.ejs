<%- include('partials/header', { title: title }) %>

<div class="upload-page-redesigned">
    <!-- Animated Background -->
    <div class="upload-background">
        <div class="bg-gradient"></div>
        <div class="bg-particles"></div>
        <div class="bg-mesh"></div>
    </div>

    <!-- Main Upload Container -->
    <div class="upload-container">
        <!-- Header Section -->
        <div class="upload-header-redesigned">
            <div class="header-icon">
                <div class="icon-wrapper">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <div class="icon-pulse"></div>
                </div>
            </div>
            <h1 class="header-title">Upload Your Mod</h1>
            <p class="header-subtitle">Share your DDLC creation with the community</p>

            <!-- Progress Indicator -->
            <div class="progress-indicator">
                <div class="progress-track">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                <div class="progress-steps">
                    <div class="progress-step active" data-step="1">
                        <div class="step-dot">1</div>
                        <span class="step-label">Info</span>
                    </div>
                    <div class="progress-step" data-step="2">
                        <div class="step-dot">2</div>
                        <span class="step-label">Files</span>
                    </div>
                    <div class="progress-step" data-step="3">
                        <div class="step-dot">3</div>
                        <span class="step-label">Details</span>
                    </div>
                    <div class="progress-step" data-step="4">
                        <div class="step-dot">4</div>
                        <span class="step-label">Review</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Container -->
        <div class="form-container-redesigned">
            <form id="uploadForm" class="upload-form-redesigned" enctype="multipart/form-data">

                <!-- Step 1: Basic Information -->
                <div class="form-step active" data-step="1">
                    <div class="step-header">
                        <div class="step-icon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div class="step-title">
                            <h2>Basic Information</h2>
                            <p>Tell us about your mod</p>
                        </div>
                    </div>

                    <div class="form-grid">
                        <!-- Mod Title -->
                        <div class="input-group full-width">
                            <label class="input-label">
                                <span class="label-text">Mod Title</span>
                                <span class="label-required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <input
                                    type="text"
                                    id="title"
                                    name="title"
                                    class="form-input"
                                    placeholder="Enter your mod's title"
                                    required
                                    maxlength="255"
                                >
                                <div class="input-border"></div>
                                <div class="input-icon">
                                    <i class="fas fa-heading"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Category -->
                        <div class="input-group">
                            <label class="input-label">
                                <span class="label-text">Category</span>
                                <span class="label-required">*</span>
                            </label>
                            <div class="select-wrapper">
                                <select id="category_id" name="category_id" class="form-select" required>
                                    <option value="">Choose a category...</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>"><%= category.name %></option>
                                    <% }); %>
                                </select>
                                <div class="select-arrow">
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="input-border"></div>
                            </div>
                        </div>

                        <!-- Short Description -->
                        <div class="input-group full-width">
                            <label class="input-label">
                                <span class="label-text">Short Description</span>
                                <span class="label-required">*</span>
                                <span class="label-hint">This appears in mod listings</span>
                            </label>
                            <div class="textarea-wrapper">
                                <textarea
                                    id="short_description"
                                    name="short_description"
                                    class="form-textarea"
                                    placeholder="Write a compelling short description..."
                                    required
                                    maxlength="500"
                                    rows="3"
                                ></textarea>
                                <div class="input-border"></div>
                                <div class="char-counter">
                                    <span class="char-count">0</span> / 500
                                </div>
                            </div>
                        </div>

                        <!-- Full Description -->
                        <div class="input-group full-width">
                            <label class="input-label">
                                <span class="label-text">Full Description</span>
                                <span class="label-required">*</span>
                                <span class="label-hint">Detailed information about your mod</span>
                            </label>
                            <div class="textarea-wrapper">
                                <textarea
                                    id="description"
                                    name="description"
                                    class="form-textarea"
                                    placeholder="Describe your mod in detail. What's the story about? What features does it include?"
                                    required
                                    rows="6"
                                ></textarea>
                                <div class="input-border"></div>
                            </div>
                        </div>
                    </div>

                    <div class="step-actions">
                        <button type="button" class="btn btn-primary next-step" data-next="2">
                            <span>Next: Upload Files</span>
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Step 2: File Upload -->
                <div class="form-step" data-step="2">
                    <div class="step-header">
                        <div class="step-icon">
                            <i class="fas fa-upload"></i>
                        </div>
                        <div class="step-title">
                            <h2>Upload Files</h2>
                            <p>Upload your mod file and thumbnail</p>
                        </div>
                    </div>

                    <div class="form-grid">
                        <!-- Mod File Upload -->
                        <div class="input-group full-width">
                            <label class="input-label">
                                <span class="label-text">Mod File</span>
                                <span class="label-required">*</span>
                                <span class="label-hint" id="fileSizeHint">Maximum file size: Loading...</span>
                            </label>
                            <div class="file-upload-area" id="modFileUpload">
                                <div class="upload-zone">
                                    <div class="upload-icon">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>
                                    <div class="upload-text">
                                        <h3>Drop your mod file here</h3>
                                        <p>or <span class="upload-link">browse files</span></p>
                                        <small>Supported formats: .zip, .rar, .7z</small>
                                    </div>
                                    <input type="file" id="modFile" name="modFile" accept=".zip,.rar,.7z" hidden>
                                </div>
                                <div class="upload-progress" style="display: none;">
                                    <div class="progress-bar">
                                        <div class="progress-fill"></div>
                                    </div>
                                    <div class="progress-text">Uploading...</div>
                                </div>
                                <div class="file-info" style="display: none;">
                                    <div class="file-details">
                                        <i class="fas fa-file-archive"></i>
                                        <div class="file-meta">
                                            <span class="file-name"></span>
                                            <span class="file-size"></span>
                                        </div>
                                    </div>
                                    <button type="button" class="remove-file">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Thumbnail Upload -->
                        <div class="input-group">
                            <label class="input-label">
                                <span class="label-text">Thumbnail</span>
                                <span class="label-hint">Optional - Auto-generated if not provided</span>
                            </label>
                            <div class="thumbnail-upload-area" id="thumbnailUpload">
                                <div class="thumbnail-zone">
                                    <div class="thumbnail-preview">
                                        <i class="fas fa-image"></i>
                                        <span>Upload Thumbnail</span>
                                    </div>
                                    <input type="file" id="thumbnail" name="thumbnail" accept="image/*" hidden>
                                </div>
                                <div class="thumbnail-actions" style="display: none;">
                                    <button type="button" class="btn btn-secondary remove-thumbnail">
                                        <i class="fas fa-trash"></i>
                                        Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="step-actions">
                        <button type="button" class="btn btn-secondary prev-step" data-prev="1">
                            <i class="fas fa-arrow-left"></i>
                            <span>Previous</span>
                        </button>
                        <button type="button" class="btn btn-primary next-step" data-next="3">
                            <span>Next: Add Details</span>
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Step 3: Additional Details -->
                <div class="form-step" data-step="3">
                    <div class="step-header">
                        <div class="step-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <div class="step-title">
                            <h2>Additional Details</h2>
                            <p>Add tags and content settings</p>
                        </div>
                    </div>

                    <div class="form-grid">
                        <!-- Version -->
                        <div class="input-group">
                            <label class="input-label">
                                <span class="label-text">Version</span>
                                <span class="label-required">*</span>
                                <span class="label-hint">e.g., 1.0.0</span>
                            </label>
                            <div class="input-wrapper">
                                <input
                                    type="text"
                                    id="version"
                                    name="version"
                                    class="form-input"
                                    placeholder="1.0.0"
                                    required
                                    maxlength="20"
                                >
                                <div class="input-border"></div>
                                <div class="input-icon">
                                    <i class="fas fa-code-branch"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Tags -->
                        <div class="input-group">
                            <label class="input-label">
                                <span class="label-text">Tags</span>
                                <span class="label-hint">Help users discover your mod</span>
                            </label>
                            <div class="tags-input-wrapper">
                                <input
                                    type="text"
                                    id="tagsInput"
                                    class="form-input"
                                    placeholder="Type tags and press Enter"
                                >
                                <div class="input-border"></div>
                                <div class="tags-container" id="tagsContainer"></div>
                            </div>
                        </div>

                        <!-- Changelog -->
                        <div class="input-group full-width">
                            <label class="input-label">
                                <span class="label-text">Changelog</span>
                                <span class="label-hint">What's new in this version?</span>
                            </label>
                            <div class="textarea-wrapper">
                                <textarea
                                    id="changelog"
                                    name="changelog"
                                    class="form-textarea"
                                    placeholder="Describe what's new or changed in this version..."
                                    rows="4"
                                ></textarea>
                                <div class="input-border"></div>
                            </div>
                        </div>

                        <!-- Content Rating -->
                        <div class="input-group full-width">
                            <div class="checkbox-group">
                                <label class="checkbox-label">
                                    <input type="checkbox" id="is_nsfw" name="is_nsfw" class="form-checkbox">
                                    <div class="checkbox-custom">
                                        <i class="fas fa-check"></i>
                                    </div>
                                    <div class="checkbox-content">
                                        <span class="checkbox-title">Mature/NSFW Content</span>
                                        <span class="checkbox-desc">Contains adult themes or explicit content</span>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="step-actions">
                        <button type="button" class="btn btn-secondary prev-step" data-prev="2">
                            <i class="fas fa-arrow-left"></i>
                            <span>Previous</span>
                        </button>
                        <button type="button" class="btn btn-primary next-step" data-next="4">
                            <span>Next: Review</span>
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Step 4: Review & Submit -->
                <div class="form-step" data-step="4">
                    <div class="step-header">
                        <div class="step-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="step-title">
                            <h2>Review & Submit</h2>
                            <p>Review your mod details before submission</p>
                        </div>
                    </div>

                    <div class="review-container">
                        <div class="review-summary" id="reviewSummary">
                            <!-- Summary will be populated by JavaScript -->
                        </div>

                        <div class="terms-agreement">
                            <label class="checkbox-label">
                                <input type="checkbox" id="terms" name="terms" class="form-checkbox" required>
                                <div class="checkbox-custom">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div class="checkbox-content">
                                    <span class="checkbox-title">I agree to the terms and conditions</span>
                                    <span class="checkbox-desc">
                                        I confirm this is my original work or I have permission to distribute it,
                                        and it complies with the <a href="/guidelines" target="_blank">Community Guidelines</a>
                                    </span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="step-actions">
                        <button type="button" class="btn btn-secondary prev-step" data-prev="3">
                            <i class="fas fa-arrow-left"></i>
                            <span>Previous</span>
                        </button>
                        <button type="submit" class="btn btn-primary btn-large">
                            <i class="fas fa-upload"></i>
                            <span>Upload Mod</span>
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include('partials/footer', { scripts: ['/js/pages/upload-redesigned.js'] }) %>
