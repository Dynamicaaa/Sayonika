                <!-- Content Area -->
                <main class="docs-content" id="docsContent">
                    <!-- Getting Started Section -->
                    <section class="docs-section" id="getting-started">
                        <h2>Getting Started</h2>
                        <div class="section-content">
                            <p class="lead">
                                Welcome to Sayonika! This simplified guide will get you up and running quickly.
                                For detailed installation instructions, see the main README.md file.
                            </p>

                            <!-- Quick Start Steps -->
                            <div class="steps-container">
                                <div class="step-item">
                                    <div class="step-number">1</div>
                                    <div class="step-content">
                                        <h3>Clone Repository</h3>
                                        <p>Get the Sayonika source code:</p>
                                        <div class="code-block">
                                            <div class="code-header">
                                                <span>Clone and navigate</span>
                                                <button class="copy-btn" data-copy="git clone https://github.com/Dynamicaaa/Sayonika.git
cd Sayonika">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                            <pre><code>git clone https://github.com/Dynamicaaa/Sayonika.git
cd Sayonika</code></pre>
                                        </div>
                                    </div>
                                </div>

                                <div class="step-item">
                                    <div class="step-number">2</div>
                                    <div class="step-content">
                                        <h3>Configure Environment</h3>
                                        <p>Set up your environment configuration:</p>
                                        <div class="code-block">
                                            <div class="code-header">
                                                <span>Create .env file</span>
                                                <button class="copy-btn" data-copy="cp .env.example .env">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                            <pre><code>cp .env.example .env</code></pre>
                                        </div>
                                        <p>Edit the <code>.env</code> file with your configuration. At minimum, set:</p>
                                        <div class="code-block">
                                            <div class="code-header">
                                                <span>Basic configuration</span>
                                                <button class="copy-btn" data-copy="PORT=3000
SESSION_SECRET=your-secret-key-here
WEBSITE_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-key">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                            <pre><code>PORT=3000
SESSION_SECRET=your-secret-key-here
WEBSITE_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-key</code></pre>
                                        </div>
                                    </div>
                                </div>

                                <div class="step-item">
                                    <div class="step-number">3</div>
                                    <div class="step-content">
                                        <h3>Install & Build</h3>
                                        <p>Install dependencies and build the CSS:</p>
                                        <div class="code-block">
                                            <div class="code-header">
                                                <span>Install and build</span>
                                                <button class="copy-btn" data-copy="npm install
npm run build-css-prod">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                            <pre><code>npm install
npm run build-css-prod</code></pre>
                                        </div>
                                    </div>
                                </div>

                                <div class="step-item">
                                    <div class="step-number">4</div>
                                    <div class="step-content">
                                        <h3>Run Sayonika</h3>
                                        <p>Start your Sayonika instance:</p>
                                        <div class="code-block">
                                            <div class="code-header">
                                                <span>Start server</span>
                                                <button class="copy-btn" data-copy="npm run dev">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                            <pre><code>npm run dev</code></pre>
                                        </div>
                                        <p>Your Sayonika instance will be available at <code>http://localhost:3000</code></p>
                                        <div class="alert success">
                                            <i class="fas fa-check-circle"></i>
                                            <div>
                                                <strong>Ready!</strong> Your Sayonika instance is now running.
                                                The first user to register will automatically become the owner.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- What's Next -->
                            <div class="next-steps">
                                <h3>What's Next?</h3>
                                <div class="next-steps-grid">
                                    <div class="next-step-card">
                                        <div class="step-icon">
                                            <i class="fas fa-book"></i>
                                        </div>
                                        <h4>Full Installation Guide</h4>
                                        <p>For detailed setup instructions, database initialization, and configuration options.</p>
                                        <a href="https://github.com/Dynamicaaa/Sayonika#installation" class="btn btn-outline" target="_blank">View README</a>
                                    </div>

                                    <div class="next-step-card">
                                        <div class="step-icon">
                                            <i class="fas fa-cog"></i>
                                        </div>
                                        <h4>Advanced Configuration</h4>
