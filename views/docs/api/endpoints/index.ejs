# Search for romance mods
curl -X GET "<%- process.env.WEBSITE_URL || 'http://localhost:3000' %>/api/mods?search=romance&category=full-mods" \
  -H "Accept: application/json"

# Get a specific mod
curl -X GET "<%- process.env.WEBSITE_URL || 'http://localhost:3000' %>/api/mods/my-awesome-mod" \
  -H "Accept: application/json"</code></pre>
